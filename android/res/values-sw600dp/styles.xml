<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="MwmWidget.Shadow.Panel">
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingTop">3dp</item>
    <item name="android:background">@drawable/ic_bg_pp</item>
  </style>

  <style name="MwmWidget.ListView" parent="android:Widget.ListView">
    <item name="android:fadingEdge">none</item>
    <item name="android:divider">@color/base_black_divider</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:dividerHeight">1px</item>
    <item name="android:animationCache">false</item>
    <item name="android:scrollingCache">false</item>
    <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>

</resources>