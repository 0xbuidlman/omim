<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseCompoundDrawables">

  <LinearLayout
      android:id="@+id/ll__share"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/ll__settings"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv__share"
        style="@style/MwmWidget.TextView.BottomMenu"
        android:text="@string/share_my_location"
        android:textAppearance="@style/MwmTextAppearance.Body1.Light"/>

    <ImageView
        android:id="@+id/btn__share"
        style="@style/MwmWidget.MapButton.Green.Child"
        android:contentDescription="@string/share_my_location"
        android:src="@drawable/btn_green_share"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/ll__settings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/ll__download_maps"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv__settings"
        style="@style/MwmWidget.TextView.BottomMenu"
        android:text="@string/settings"
        android:textAppearance="@style/MwmTextAppearance.Body1.Light"/>

    <ImageView
        android:id="@+id/btn__settings"
        style="@style/MwmWidget.MapButton.Green.Child"
        android:contentDescription="@string/settings"
        android:src="@drawable/btn_green_settings"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/ll__download_maps"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/ll__bookmarks"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv__download_maps"
        style="@style/MwmWidget.TextView.BottomMenu"
        android:text="@string/download_maps"
        android:textAppearance="@style/MwmTextAppearance.Body1.Light"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true">

      <ImageView
          android:id="@+id/btn__download_maps"
          style="@style/MwmWidget.MapButton.Green.Child"
          android:contentDescription="@string/download_maps"
          android:src="@drawable/btn_green_download"/>

      <TextView
          android:id="@+id/tv__outdated_maps_counter"
          style="@style/MwmWidget.TextView.OutOfDateMapsMarker"
          android:layout_gravity="right"/>
    </FrameLayout>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/ll__bookmarks"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/ll__search"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv__bookmarks"
        style="@style/MwmWidget.TextView.BottomMenu"
        android:text="@string/bookmarks"
        android:textAppearance="@style/MwmTextAppearance.Body1.Light"/>

    <ImageView
        android:id="@+id/btn__bookmarks"
        style="@style/MwmWidget.MapButton.Green.Child"
        android:contentDescription="@string/bookmarks"
        android:src="@drawable/btn_green_bookmarks"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/ll__search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv__search"
        style="@style/MwmWidget.TextView.BottomMenu"
        android:text="@string/search"
        android:textAppearance="@style/MwmTextAppearance.Body1.Light"/>

    <ImageView
        android:id="@+id/btn__search"
        style="@style/MwmWidget.MapButton.Green.Child"
        android:contentDescription="@string/search"
        android:src="@drawable/btn_green_search"/>

  </LinearLayout>

  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true">

    <ImageButton
        android:id="@+id/btn__open_menu"
        style="@style/MwmWidget.MapButton.Green"
        android:contentDescription="@string/menu_search"
        android:src="@drawable/btn_green_menu"/>

  </FrameLayout>

</merge>