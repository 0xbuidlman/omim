<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- This view'll take focus. And user will not see keyboard when open this screen. -->

    <View
        android:id="@+id/bmk_hack_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/pin_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/name"
                android:imeOptions="actionDone"
                android:singleLine="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/abs__list_divider_holo_light"/>

            <RelativeLayout
                android:id="@+id/pin_sets"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_holo_light"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/disclosure_image_cat"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pin_button_set_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="sdfjdslkfjdsklf"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/set"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/disclosure_image_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/cell_arrow_black" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/abs__list_divider_holo_light" />

            <RelativeLayout
                android:id="@+id/pin_color_chooser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_holo_light"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <include
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/disclosure_image_color"
                    layout="@layout/color_row"
                    android:clickable="false"
                    android:focusable="false" />

                <ImageView
                    android:id="@+id/disclosure_image_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cell_arrow_black" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/abs__list_divider_holo_light" />

            <EditText
                android:id="@+id/pin_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/description"
                android:imeOptions="actionDone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@drawable/abs__list_divider_holo_light" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onOkClick"
                android:text="@string/ok" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onDeleteClick"
                android:text="@string/remove_pin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>