<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_top_panels" >

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/half_tranfparent_white_selector"
        android:drawableLeft="@drawable/bookmark_done"
        android:drawablePadding="@dimen/dp_x_1"
        android:paddingLeft="@dimen/dp_x_2"
        android:paddingRight="@dimen/dp_x_2"
        android:text="@string/done"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_x_2"
        android:layout_marginTop="@dimen/dp_x_2"
        android:layout_marginLeft="-2dp"
        android:layout_toRightOf="@id/done"
        android:background="#33FFFFFF" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/half_tranfparent_white_selector"
        android:paddingLeft="@dimen/dp_x_2"
        android:paddingRight="@dimen/dp_x_2"
        android:src="@drawable/bookmark_delete" />

</RelativeLayout>