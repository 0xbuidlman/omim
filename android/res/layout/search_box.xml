<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_page_preview"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_weight="1"
      android:background="@drawable/bg_search_rounded">

    <FrameLayout
        android:id="@+id/container_progress_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <ProgressBar
          android:id="@+id/search_progress"
          style="@style/Holo.ProgressBar.Small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:visibility="visible"/>

      <ImageView
          android:id="@+id/search_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/ic_search"/>
    </FrameLayout>

    <EditText
        android:id="@+id/search_text_query"
        style="@style/Holo.TextAppearance.Large.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:fontFamily="@string/robotoRegular"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingBottom="@dimen/dp_x_1"
        android:paddingLeft="@dimen/dp_x_2"
        android:paddingRight="@dimen/dp_x_2"
        android:paddingTop="@dimen/dp_x_2"
        android:singleLine="true"
        android:textColor="@android:color/white"/>

    <FrameLayout
        android:id="@+id/container_cancel_voice_input_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">

      <ImageView
          android:id="@+id/search_image_clear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="10dp"
          android:src="@drawable/ic_close"/>

      <ImageView
          android:id="@+id/search_voice_input"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="10dp"
          android:src="@drawable/search_box_voice_selector"
          android:visibility="gone"/>
    </FrameLayout>

  </LinearLayout>

  <TextView
      android:id="@+id/btn_cancel_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/margin_small"
      android:text="@string/cancel"
      android:textColor="@android:color/white"/>

</LinearLayout>