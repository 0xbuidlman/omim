<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:paddingLeft="@dimen/dp_x_10"
    android:paddingRight="@dimen/dp_x_10"
    android:scrollbarStyle="outsideOverlay" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            style="@style/infoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/type"
            style="@style/tagGreenText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/margin_small" />

        <TextView
            android:id="@+id/group"
            style="@style/infoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/margin_small"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/sp_x_3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descr"
            style="@style/infoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <!-- EMPTY VIEW - takes space between block. Margin doesn't work :( -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_large"
            android:background="@null" />

        <Button
            android:id="@+id/addToBookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/add_to_bookmarks" />

        <Button
            android:id="@+id/editBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/edit" />

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/share" />

        <Button
            android:id="@+id/openWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/more_info" />
    </LinearLayout>

</ScrollView>