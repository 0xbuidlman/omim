<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp" >

    <TextView
        android:id="@+id/name"
        style="@style/Holo.TextAppearance.Large.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:drawablePadding="@dimen/margin_small" />

    <include layout="@layout/horizontal_separator" />

    <TextView
        android:id="@+id/latLon"
        style="@style/Holo.TextAppearance.Medium.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium" />

    <include layout="@layout/horizontal_separator" />

    <TextView
        android:id="@+id/groupType"
        style="@style/Holo.TextAppearance.Medium.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium" />

    <include layout="@layout/horizontal_separator" />

    <TextView
        android:id="@+id/descr"
        style="@style/Holo.TextAppearance.Medium.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium" />

    <include layout="@layout/horizontal_separator" />

    <!-- EMPTY VIEW - takes space between block. Margin don't work :( -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_large"
        android:background="@null" />

    <Button
        android:id="@+id/addToBookmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Add To Bookmarks" />

    <Button
        android:id="@+id/editBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Edit Bookmark" />

    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/share" />

    <Button
        android:id="@+id/openWith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Open With " />

</LinearLayout>