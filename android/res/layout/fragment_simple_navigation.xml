<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="top"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dynamicData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/mz">

        <TextView
            android:id="@+id/distance"
            style="@style/tagGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"/>

        <com.mapswithme.maps.ArrowImage
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp_x_2"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/staticData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/abs__item_background_holo_light"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_tiny"
        >

        <TextView
            android:id="@+id/dms"
            style="@style/tagGreenText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small" />
    </LinearLayout>

</LinearLayout>